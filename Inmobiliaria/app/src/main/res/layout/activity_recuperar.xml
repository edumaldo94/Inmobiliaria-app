<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_recuperar"
    tools:context=".ui.Perfil.RecuperarActivity">


    <EditText
        android:id="@+id/etCorreoRecupero"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/mail"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:text="maldonado19994@gmail.com"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRecuperoInfo" />

    <Button
        android:id="@+id/btnRecuperar"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:shadowColor="@color/black"
        android:text="Recuperar"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etCorreoRecupero"
        app:layout_constraintVertical_bias="0.207" />

    <TextView
        android:id="@+id/tvRecuperoInfo"
        android:layout_width="373dp"
        android:layout_height="35dp"
        android:layout_marginTop="268dp"
        android:gravity="center"
        android:text="Ingrese Email"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>